<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:padding="10dp"
        app:layout_constraintCircleRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@color/black"
        />

    <TextView
        android:id="@+id/picTitle_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingBottom="25dp"
        android:textColor="@color/text_color"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/image_view"
        tools:text="officia porro iure quia iusto qui ipsa ut modi" />

    <TextView

        android:id="@+id/imageId_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:paddingLeft="10dp"
        android:textSize="20sp"
        tools:text="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/picTitle_textView" />

    <TextView
        android:id="@+id/albumId_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        android:paddingRight="10dp"
        tools:text="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageId_textView"/>

</androidx.constraintlayout.widget.ConstraintLayout>